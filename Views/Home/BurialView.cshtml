@{
    ViewData["Title"] = "View Burial";
}

@model FullBurial

<div>
    <h1>@Model.Burialmain.Squarenorthsouth @Model.Burialmain.Northsouth @Model.Burialmain.Squareeastwest @Model.Burialmain.Eastwest @Model.Burialmain.Area @Model.Burialmain.Burialnumber</h1>
<ul>
    @*<li>Textile Structure: @Model.TextileStructure</li>*@
    @*<li>Estimate Stature: @Model.EstimateStature</li>*@
    @*<li>Textile Function: @Model.TextileFunction</li>*@
</ul>
</div>

@*<h1>@Model.BurialmainTextile.MainTextileid</h1>*@

<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="col-5">
                Sex:
            </div>
            <div class="col">
                @Model.Burialmain.Sex
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                Textile color:
            </div>
            <div class="col">
                @Model.Color
            </div>
        </div>

            <div class="row">
                <div class="col-5">
                    Textile structure:
                </div>
                <div class="col">
                    @Model.Structure
                </div>
            </div>

        <div class="row">
            <div class="col-5">
                Burial Depth:
            </div>
            <div class="col">
                @Model.Burialmain.Depth
            </div>
        </div>
        <div class="row">
            <div class="col-5">
                Age at Death:
            </div>
            <div class="col">
                @Model.Burialmain.Ageatdeath
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                Head Direction:
            </div>
            <div class="col">
                @Model.Burialmain.Headdirection
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                Textile Function:
            </div>
            <div class="col">
                @Model.Textilefunction
            </div>
        </div>

            <div class="row">
                <div class="col-5">
                    Hair Color:
                </div>
                <div class="col">
                    @Model.Burialmain.Haircolor
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    Field Notes:
                </div>
                <div class="col">
                    @Model.Burialmain.Text
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    Measurements:
                </div>
                <div class="col">
                   {Measurements}
                </div>
            </div>
        </div>
    <br />
    

    <div class="col-6">
        <img src="" />
    </div>
    <br />
</div>
<br />
<button type="button" class="btn btn-primary"><a asp-action="BurialList">Back</a></button>


