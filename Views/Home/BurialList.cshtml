@{
    ViewData["Title"] = "Home Page";
}
@model PageModel

<h1>Burial List</h1>

@foreach (Burialmain b in Model.BurialList)
{
<div class="border-dark">
    <div class="border-dark">
        <h4>Mummy @b.Id</h4>
    </div>
    <p>This mummy was a <u >@b.Sex</u> <u>@b.Ageatdeath</u> with <u>@b.Haircolor</u> hair and <u>@b.Wrapping</u> wrapping found in the <u>@b.Area</u> area.</p>
    <button class="btn btn-primary"  type="button"><a asp-action="BurialView" asp-route-id="@b.Id">Read More!</a></button>
</div>
}

<div page-model="@Model.PageInfo" page-action="BurialList" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
