@model Burialmain

<h1>Edit Mummy</h1>

<div>
    <form method="post">

        <div class="row">
            <div class="col-2">
                <label asp-for="Northsouth">North South:</label>
            </div>
            <div class="col">
                <select asp-for="Northsouth" value="@Model.Northsouth">
                    <option value="">Select an Option:</option>
                    <option value="N">North</option>
                    <option value="S">South</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Squarenorthsouth">Square North South:</label>
            </div>
            <div class="col">
                <input asp-for="Squarenorthsouth" type="number" value="@Model.Squarenorthsouth" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Eastwest">East West:</label>
            </div>
            <div class="col">
                <select asp-for="Eastwest" value="@Model.Eastwest">
                    <option value="">Select an Option:</option>
                    <option value="W">W</option>
                    <option value="E">E</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Squareeastwest">Square East West:</label>
            </div>
            <div class="col">
                <input asp-for="Squareeastwest" type="number" value="@Model.Squareeastwest" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Area">Area:</label>
            </div>
            <div class="col">
                <select asp-for="Area" value="@Model.Area">
                    <option value="">Select an Option:</option>
                    <option value="NW">NW</option>
                    <option value="NE">NE</option>
                    <option value="SW">SW</option>
                    <option value="SE">SE</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Burialnumber">Burial Number:</label>
            </div>
            <div class="col">
                <input asp-for="Burialnumber" type="number" value="@Model.Burialnumber" />
            </div>
        </div>

        <br /><br />

        <div class="row">
            <div class="col-2">
                <label asp-for="Headdirection">Head direction:</label>
            </div>
            <div class="col">
                <input asp-for="Headdirection" value="@Model.Headdirection" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Westtohead">West to head:</label>
            </div>
            <div class="col">
                <input asp-for="Westtohead" type="number"  value="@Model.Westtohead" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Southtohead">South to head:</label>
            </div>
            <div class="col">
                <input asp-for="Southtohead" type="number" value="@Model.Southtohead" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Westtofeet">West to feet:</label>
            </div>
            <div class="col">
                <input asp-for="Westtofeet" type="number" value="@Model.Westtofeet" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Southtofeet">South to feet:</label>
            </div>
            <div class="col">
                <input asp-for="Southtofeet" type="number" value="@Model.Southtofeet" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Depth">Depth(m):</label>
            </div>
            <div class="col">
                <input asp-for="Depth" type="number" value="@Model.Depth" />
            </div>
        </div>








        <div class="row">
            <div class="col-2">
                <label asp-for="Sex">Sex:</label>
            </div>
            <div class="col">
                <select asp-for="Sex" value="@Model.Sex">
                    <option value="">Select an Option:</option>
                    <option value="U">Unknown</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Ageatdeath">Age at death:</label>
            </div>
            <div class="col">
                <select asp-for="Ageatdeath" value="@Model.Ageatdeath">
                    <option value="">Select an Option:</option>
                    <option value="U">Unknown</option>
                    <option value="A">Adult(15+)</option>
                    <option value="C">Child(3-15)</option>
                    <option value="I">Infant(1-3)</option>
                    <option value="N">Newborn(0-1)</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Wrapping">Wrapping:</label>
            </div>
            <div class="col">
                <select asp-for="Wrapping" value="@Model.Wrapping">
                    <option value="">Select an Option:</option>
                    <option value="F">Full or Nearly Full</option>
                    <option value="H">Partial</option>
                    <option value="B">Bones Only</option>
                    <option value="U">Unknown</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Facebundles">Facebundles:</label>
            </div>
            <div class="col">
                <input asp-for="Facebundles" value="@Model.Facebundles" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Preservation">Preservation:</label>
            </div>
            <div class="col">
                <input asp-for="Preservation" value="@Model.Preservation" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Haircolor">Hair Color:</label>
            </div>
            <div class="col">
                <select asp-for="Haircolor" value="@Model.Haircolor">
                    <option value="">Select an Option:</option>
                    <option value="U">Unknown</option>
                    <option value="B">Brown</option>
                    <option value="K">Black</option>
                    <option value="A">Brown-Red</option>
                    <option value="R">Red</option>
                    <option value="D">Blond</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Text">Field Notes:</label>
            </div>
            <div class="col">
                <input asp-for="Text" value="@Model.Text" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <label asp-for="Fieldbookpage">Fieldbook Page:</label>
            </div>
            <div class="col">
                <input asp-for="Fieldbookpage" type="number" value="@Model.Fieldbookpage" />
            </div>
        </div>

        <br />

        <button class="btn btn-primary"type="submit">Submit</button>
        <a asp-controller="Home" asp-action="BurialList" class="btn btn-primary" class="btn btn-secondary">Cancel</a>

    </form>
</div>